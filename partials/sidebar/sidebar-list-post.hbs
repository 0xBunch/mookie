<article class="sidebar-list-post" data-post-id="{{id}}">
    {{#if feature_image}}
        <a class="sidebar-list-post__img-link" href="{{url}}" aria-label="{{t "post image link"}}">
            <picture class="sidebar-list-post__img-wrapper">
                <source 
                    srcset=" 
                        {{img_url feature_image size="300" format="webp" }} 300w,
                        {{img_url feature_image size="150" format="webp" }} 150w"
                        sizes="6vw"
                        type="image/webp">
                        <img 
                        srcset="
                        {{img_url feature_image size="300"}} 300w,
                        {{img_url feature_image size="150"}} 150w"
                        sizes="6vw"
                        src="{{img_url feature_image size="300"}}"
                    alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}} {{t "Feature image"}}{{/if}}"
                    class="sidebar-list-post__img">
            </picture>
        </a>
    {{else}}
        <a href="{{url}}" class="sidebar-list-post__img-link sidebar-list-post__no-image-link" aria-label="{{t "post image link"}}">
            {{#if @site.logo}}
                {{#if @custom.dark_mode_logo}}
                <img src="{{img_url @custom.dark_mode_logo}}" alt="{{@site.title}} {{t "logo"}}" class="sidebar-list-post__no-image sidebar-list-post__no-image--dark-logo"/>
                {{/if}}
                <img src="{{img_url @site.logo}}" alt="{{@site.title}} {{t "logo"}}" class="sidebar-list-post__no-image sidebar-list-post__no-image--light-logo"/>
            {{else}}
                <h3 class="sidebar-list-post__no-image-title">{{@site.title}}</h3>
            {{/if}}
        </a>
    {{/if}}

    <div class="sidebar-list-post__content">
        <h4 class="sidebar-list-post__title">
            <a href="{{url}}" class="sidebar-list-post__title-link">
                {{title}}
            </a>
        </h4>

        <time class="sidebar-list-post__date" datetime="{{date format='YYYY-MM-DD'}}">
            {{date format="MMM D, YYYY"}}
        </time> 
    </div>
</article>